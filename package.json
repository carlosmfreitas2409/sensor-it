{
	"name": "sensor-it",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint && manypkg check",
		"format": "turbo format",
		"ui:add": "turbo --filter=@sensor-it/ui ui:add --",
		"api": "turbo --filter=@sensor-it/api",
		"dashboard": "turbo --filter=@sensor-it/dashboard",
		"www": "turbo --filter=@sensor-it/www"
	},
	"dependencies": {
		"@biomejs/biome": "^1.8.3",
		"@manypkg/cli": "^0.21.4",
		"dotenv-cli": "^7.4.2",
		"turbo": "latest"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "^bun@1.1.3"
}
