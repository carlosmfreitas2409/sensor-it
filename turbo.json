{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env*"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "next-env.d.ts"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {},
		"format": {},
		"ui:add": {
			"cache": false
		},
		"studio": {
			"cache": false
		},
		"generate": {
			"cache": false
		},
		"migrate": {
			"cache": false
		},
		"seed": {
			"cache": false
		}
	}
}
