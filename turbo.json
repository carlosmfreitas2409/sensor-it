{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env*"],
	"tasks": {
		"build": {
			"env": [
				"DATABASE_URL",
				"JWT_SECRET_KEY",
				"GOOGLE_OAUTH_CLIENT_ID",
				"GOOGLE_OAUTH_CLIENT_SECRET",
				"GOOGLE_OAUTH_REDIRECT_URI"
			],
			"inputs": ["$TURBO_DEFAULT$", ".env"],
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "next-env.d.ts", "dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {},
		"format": {},
		"ui:add": {
			"cache": false
		},
		"studio": {
			"cache": false
		},
		"generate": {
			"cache": false
		},
		"migrate": {
			"cache": false
		},
		"seed": {
			"cache": false
		}
	}
}
